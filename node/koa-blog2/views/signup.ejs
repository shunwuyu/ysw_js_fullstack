<%- include("header", {type: 'signup'})%>
<div class="container">
  <form method="post" class="form create">
    <div>
      <label>用户名：</label>
      <input type="text" name="name" placeholder="请输入用户名">
    </div>
    <div>
      <label>密码：</label>
      <input type="password" name="password" class="password" placeholder="请输入密码">
    </div>
    <div>
      <label>重复密码：</label>
      <input type="password" class="repeatpass" placeholder="请确认密码"
      name="repeatpass">
    </div>
    <div>
      <label>上传头像:</label>
      <input type="file" name="avatar" id="avatar">
      <input type="hidden" id="avatarVal">
      <img class="preview">
    </div>
    <div class="submit">注册</div>
  </form>
</div>
<script>
$('#avatar').change(function() {
  console.log(this.files);
  if (this.files.length !== 0) {
    var file = this.files[0],
      reader = new FileReader();
    if (!reader) {
      this.value = '';
      return;
    }
    console.log(file.size, file.type);
    reader.onload = function(e) {
      this.value = '';
      $('form .preview').attr('src', e.target.result);
      $('form .preview').fadeIn();
      var image = new Image();
      image.onload = function() {
        var canvas = document.createElement('canvas');
        var ctx = canvas.getContext('2d');
        canvas.width = 100;
        canvas.height = 100;
        ctx.clearRect(0,0,100,100);
        ctx.drawImage(image, 0, 0, 100, 100);
        var blob = canvas.toDataURL('image/png');
        $('#avatarVal').val(blob);
      }
      image.src = e.target.result;
    }
    reader.readAsDataURL(file);
  }
})
$('.submit').click(function() {
  if ($('input[name=name]').val().trim() === '') {
    fade('请输入用户名');
  } else if ($('input[name=name]').val().match(/[<'">]/g)) {
    fade('请输入合法字符');
  } else if ($('#avatarVal').val() == '') {
    fade('请上传头像');
  } else {
    console.log($('#avatarVal').val());
    $.ajax({
      url: '/signup',
      type: 'POST',
      data: {
        name: $('input[name=name]').val(),
        password: $('input[name=password]').val(),
        repeatpass: $('input[name=repeatpass]').val(),
        avatar: $('#avatarVal').val()
      },
      dataType: 'json',
      cache: false,
      success: function (msg) {
        if (msg.code == 200) {
          fade('注册成功');
          // setTimeout(() => {
          //   window.location.href = '/signin';
          // }, 1000)
        } else {
          fade(msg.message);
        }
      },
      error: function() {
        alert('出错了');
      }
    })
  }
})
</script>
<%- include("footer")%>